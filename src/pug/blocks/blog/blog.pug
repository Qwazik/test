mixin blog(data, className)
	.anchor.js-anchor#blog
	.blog(class=data.className)
		.container
			if data.header
				.blog__header.blog-header
					.blog-header__column 
						h2.header=data.header
					if data.more
						.blog-header__column
							a(href="blog-list.html").btn.btn_muted.blog-header__button Еще
			.blog__list
				.row
					each item, key in data.items
						if item.big
							.col-xl-6.col-lg-4.col-md-6.d-flex
								+blog-item(item)
						else
							.col-xl-3.col-lg-4.col-md-6.d-flex
								+blog-item(item)

				